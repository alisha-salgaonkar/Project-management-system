<div style="width:600px;margin-left:auto;margin-right:auto;">
    <h2>CREATE BOARD</h2>

    {{# if error }}
    <div class="alert alert-danger">
        <span>{{error}}</span>
    </div>
    {{/if}} {{# if success}}
    <div class="alert alert-success">
        <span>Board is successfully added.</span>
    </div>
    {{/if}}

    <form action="addBoard" method="post">
        <div class="form-group">
            <input type="text" required="required" name="boardTitle" class="form-control" id="boardTitle" placeholder="Enter board title">
        </div>
        <div class="form-group">
            <textarea required="required" class="form-control" rows="5" id="boardDescription" minlength="100" maxlength="250" name="boardDescription"
                placeholder="Enter board description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/">
            <button type="button" class="btn btn-primary">Cancel</button>
        </a>
    </form>
</div>